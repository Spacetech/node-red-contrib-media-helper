{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "noImplicitThis": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "lib/",
        "baseUrl": "./src",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}